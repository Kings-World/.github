{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "helpers:pinGitHubActionDigests", "group:allNonMajor"],
  "schedule": ["before 2am on Sunday"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "⬆️",
  "automergeStrategy": "squash",
  "dependencyDashboard": false,
  "npm": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      },
      {
        "matchPackagePatterns": ["^@?prisma"],
        "groupName": "Prisma Dependencies"
      },
      {
        "matchPackagePatterns": ["^@kingsworld"],
        "groupName": "King's World Dependencies"
      },
      {
        "matchPackagePatterns": ["^@?next"],
        "groupName": "Next.js Dependencies"
      },
      {
        "matchPackagePatterns": ["^react"],
        "groupName": "React Dependencies"
      },
      {
        "matchPackagePatterns": ["^@?tailwindcss"],
        "groupName": "Tailwind Dependencies"
      },
      {
        "matchPackagePatterns": ["^@chakra-ui"],
        "groupName": "Chakra UI Dependencies"
      }
    ]
  },
  "golang": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
    ]
  }
}
