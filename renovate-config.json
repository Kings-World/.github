{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "helpers:pinGitHubActionDigests", ":disableRateLimiting", "group:allNonMajor"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "⬆️",
  "automergeStrategy": "squash",
  "dependencyDashboard": true,
  "npm": {
    "rangeStrategy": "bump",
    "packageRules": [
      {
        "matchPackagePatterns": ["prisma", "@prisma"],
        "groupName": "Prisma Dependencies"
      },
      {
        "matchPackagePatterns": ["@kingsworld"],
        "groupName": "King's World Dependencies"
      },
      {
        "matchPackagePatterns": ["next", "@next"],
        "groupName": "Next.js Dependencies"
      },
      {
        "matchPackagePatterns": ["react"],
        "groupName": "React Dependencies"
      },
      {
        "matchPackagePatterns": ["tailwindcss", "@tailwindcss"],
        "groupName": "Tailwind Dependencies"
      },
      {
        "matchPackagePatterns": ["@chakra-ui"],
        "groupName": "Chakra UI Dependencies"
      }
    ]
  }
}
